<form method = "post" action = "/confirm">
    <% sauce.each do |sauce_value| %>
        <p> <%= sauce_value %>
        <input type = "radio" name = "sauce_radio" value = "sauce_yes"> Yes
        <input type = "radio" name = "sauce_radio" value = "sauce_no"> No </p>
     <% end %>
    
    <% meat_count = 0 %>
     <% meat.each do |meat_value| %>
        <p> <%= meat_value %>
        <input type = "radio" name = "meat_radio<%= meat_count.to_s %>" value = "meat_yes"> Yes
        <input type = "radio" name = "meat_radio<%= meat_count.to_s %>" value = "meat_no"> No </p>
        <% meat_count += 1%>
    <% end %>

    <% veg_count = 0 %>
    <% veg.each do |veg_value| %>
        <p> <%= veg_value %>
        <input type = "radio" name = "veg_radio<%= veg_count.to_s %>" value = "veg_yes"> Yes
        <input type = "radio" name = "veg_radio<%= veg_count.to_s %>" value = "veg_no"> No </p>
        <% veg_count += 1%>
    <% end %>

    <input type = "submit">
</form>